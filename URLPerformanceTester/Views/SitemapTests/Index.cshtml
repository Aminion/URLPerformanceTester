@model List<URLPerformanceTester.ViewModels.RequestTestsSetOverviewViewModel>
@{
    ViewBag.Title = "Tests List";
}
<h2>Tests List</h2>

@if (Model.Any())
{

    <table class="table table-hover">
        <thead>
        <tr>
            <td class="col-md-4">URL</td>
            <td class="col-md-4">Creation time</td>
            <td class="col-md-4">Progress</td>
        </tr>
        </thead>
        <tbody>
        @foreach (var testModel in Model)
        {
            <tr>
                <th><a>@testModel.RequestUrl</a></th>
                <th>@testModel.CreationTime</th>
                <th>@testModel.UrLsTested of @testModel.UrLsCount</th>
                <th>@Html.ActionLink("Details", "Details", new {id = testModel.Id})</th>
            </tr>
        }
        </tbody>
    </table>

}
else
{
    <div>List is empty, @Html.ActionLink("click to create test.", "Create")</div>
}